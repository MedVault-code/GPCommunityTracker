

<div class="container space-2">
  <!-- Title -->
  <div class="w-md-80 w-lg-50 text-center mx-md-auto mb-9">
    <h2 class="text-primary font-weight-normal">Create a <span class="font-weight-semi-bold">GP</span> Account</h2>
    <p>Please fill in your own email address, practice email address and phone number and weâ€™ll get in touch to set you up.</p>
  </div>
  <!-- End Title -->

  <div class="w-lg-80 mx-auto">
    <!-- Contacts Form -->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "practices/shared/error_messages", resource: resource %>

      <div class="row">
        <!-- Input -->
        <div class="col-sm-6 mb-6">
          <div class="js-form-message">
            <label class="form-label">
              First Name
              <span class="text-danger">*</span>
            </label>

            <%= f.text_field :first_name, class: "form-control", placeholder: "Brian", required: true, "data-msg": "Please enter your name.", "data-error-class": "u-has-error", "data-success-class": "u-has-success" %>
          </div>
        </div>
        <!-- End Input -->

        <!-- Input -->
        <div class="col-sm-6 mb-6">
          <div class="js-form-message">
            <label class="form-label">
              Last Name
              <span class="text-danger">*</span>
            </label>

            <%= f.text_field :last_name, class: "form-control", placeholder: "Kenny", required: true, "data-msg": "Please enter your name.", "data-error-class": "u-has-error", "data-success-class": "u-has-success" %>
          </div>
        </div>
        <!-- End Input -->

        <!-- Input -->
        <div class="col-sm-6 mb-6">
          <div class="js-form-message">
            <label class="form-label">
              Email address
              <span class="text-danger">*</span>
            </label>

            <%= f.email_field :email, class: "form-control", placeholder: "brian@minicorphq.com", required: true, "data-msg": "Please enter a valid email address.", "data-error-class": "u-has-error", "data-success-class": "u-has-success" %>
          </div>
        </div>
        <!-- End Input -->

        <!-- Input -->
        <div class="col-sm-6 mb-6">
          <div class="js-form-message">
            <label class="form-label">
              Password
              <span class="text-danger">*</span>
            </label>

            <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true, "data-msg": "Please enter a password.", "data-error-class": "u-has-error", "data-success-class": "u-has-success" %>
          </div>
        </div>
        <!-- End Input -->

        <div class="w-100"></div>

        <!-- Input -->
        <div class="col-sm-6 mb-6">
          <div class="js-form-message">
            <label class="form-label">
              Practice Name
              <span class="text-danger">*</span>
            </label>

            <%= f.text_field :practice_name, class: "form-control", placeholder: "MiniCorp", required: true, "data-msg": "Please enter your company or project name.", "data-error-class": "u-has-error", "data-success-class": "u-has-success" %>
          </div>
        </div>
        <!-- End Input -->

        <!-- Input -->
        <div class="col-sm-6 mb-6">
          <div class="js-form-message">
            <label class="form-label">
              Practice Phone Number
              <span class="text-danger">*</span>
            </label>

            <%= f.text_field :practice_phone, class: "form-control", placeholder: "+353 (0)1 5311254", required: true, "data-msg": "Please enter a valid phone number.", "data-error-class": "u-has-error", "data-success-class": "u-has-success" %>
          </div>
        </div>
        <!-- End Input -->
      </div>

      <!-- Input -->
      <div class="js-form-message mb-6">
        <label class="form-label">
          Practice Address
          <span class="text-danger">*</span>
        </label>

        <div class="input-group">
          <%= f.text_field :address, class: "form-control", placeholder: "Practice Address", required: true, "data-msg": "Please enter a reason.", "data-error-class": "u-has-error", "data-success-class": "u-has-success", rows: '4' %>
        </div>
      </div>
      <!-- End Input -->

      <div class="text-center">
        <%= f.submit "Create Account", class: "btn btn-primary btn-wide transition-3d-hover mb-4" %>
        <p class="small">You'll receive an email with your details shortly.</p>
      </div>
    <% end %>
    <!-- End Contacts Form -->
  </div>
</div>
