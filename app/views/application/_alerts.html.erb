<div class="container">


<div class="row mt-4">
  <div class="col-12">
    <% flash.each do |key, value| %>
    <% if value.is_a?(String) && value.include?("///") %>
    <div class="<%= flash_class(key) %>">
      <% value.split('///').each do |v| %>
      <%= v %>.
      <br>
      <% end %>
    </div>
    <% elsif value != true %>
    <div class="<%= flash_class(key) %>">
      <%= value %>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
</div>
