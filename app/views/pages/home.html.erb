<main id="content" role="main">
  <div class="container space-1">
    <div class="row justify-content-md-between align-items-center">
      <div class="col-md-6 col-lg-5 mb-7 mb-md-0">
        <h1 class="display-4 font-size-md-down-5 mb-3">COVID-19 GP Screening Form</h1>
        <p>
          Online GP screening forms to facilitate patient screening for <span class="text-primary">COVID-19</span>
        </p>

        <div class="d-flex align-items-center flex-wrap">
          <%= link_to "Add My Practice", new_practice_registration_path, class: "btn btn-soft-primary btn-wide transition-3d-hover" %>
          <!-- End Fancybox -->
        </div>
      </div>

      <div id="SVGellipseMockupMobile" class="col-md-6 mb-7">
        <!-- SVG Mockup -->
        <figure class="ie-ellipse-mockup">
          <img class="js-svg-injector" src="<%= image_url('svg/illustrations/ellipse-mockup.svg') %>" alt="Image Description"
               data-img-paths='[
                 {"targetId": "#SVGellipseMockupImg1", "newPath": "<%= image_url('header5.jpg') %>"}
               ]'
               data-parent="#SVGellipseMockupMobile">
        </figure>
        <!-- End SVG Mockup -->
      </div>
    </div>
  </div>

  <div class="container space-md-1 space-bottom-md-3">
